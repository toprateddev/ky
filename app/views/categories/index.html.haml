%h1 Listing categories
= link_to 'New Category', new_category_path, class:'btn btn-success'
%br
%br
%table.table
  %tr
    %th Name
    %th Subcategories count
    %th Events count
    %th
    %th
    %th
  - @categories.each do |category|
    %tr
      %td= category.name
      %td= category.subcategories.count
      %td= category.events.count
      %td
        = link_to 'Show', category
      %td
        = link_to 'Edit', edit_category_path(category)
      %td
        = link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }


