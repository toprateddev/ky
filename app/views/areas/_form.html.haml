= form_for @area do |f|
  - if @area.errors.any?
    #error_explanation
      %h2= "#{pluralize(@area.errors.count, 'error')} prohibited this area from being saved:"
      %ul
        - @area.errors.full_messages.each do |msg|
          %li= msg

  .form-group

    = f.label :name
    = f.text_field :name, class: 'form-control'
  = f.submit 'Save', class: 'btn btn-success'
